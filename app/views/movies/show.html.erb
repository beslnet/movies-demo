<div class="jumbotron">
<h1>Lista de películas</h1>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Título</th>
			<th>Género</th>
			<th>Año</th>
			<th>Rating</th>
			<th>Estudio</th>
		</tr>
	</thead>
	<tbody>
		
		<% @movies.each do |movie| %>
		<tr>
			<td><%= movie.title %></td>	
			<td><%= movie.genre %></td>	
			<td><%= movie.year %></td>	
			<td><%= movie.rating %></td>	
			<td><%= movie.studio %></td>	
			</tr>
		<% end %>	
		
	</tbody>
</table>

<div>
<a href="/" class="btn btn-primary btn-lg active" role="button">Agregar otra película</a>
</div>
